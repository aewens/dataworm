# $:.unshift(File.expand_path(File.dirname(__FILE__) + "/lib"))
require "fileutils"
require "yaml"
require "digest"
require "io/console"
require "net/ssh"
require "net/scp"

# To deal with ^C
trap("SIGINT") { puts; exit }

